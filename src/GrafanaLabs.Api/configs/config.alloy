logging {
  level  = "info"
}

loki.write "default" {
  endpoint {
    url = "http://loki:3100/loki/api/v1/push"
  }
}

local.file_match "dotnet_logs" {
  path_targets = [{
    __path__ = "/var/log/dotnet/*.log",
    job      = "dotnet-app",
  }]
}

loki.source.file "dotnet" {
  targets    = local.file_match.dotnet_logs.targets
  forward_to = [loki.write.default.receiver]
}
